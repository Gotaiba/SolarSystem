@model IEnumerable<SolarSystemConsumption.Models.School>
@{
    ViewBag.Title = "Home Page";
}
<h2 class="page-header">Schools</h2>
@Html.ActionLink("Create", "AddSchool", "Schools", new { @class = "btn btn-default" })
<br /><br />
@if (Model.Count() == 0)
{
    @*<div class="no-data">
            <label>&mdash; No Data &mdash;</label>
        </div>*@
    <div class="alert alert-info" role="alert">
        <strong>Oops!!</strong> there are no schools to show :)
    </div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>No.</th>
                <th>School Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{ 
                foreach(var item in Model)
                {
                    <tr>
                        <td>
                            <a href="~/School/Edit/@item.Id">
                                @item.Id
                            </a>
                        </td>
                        <td>
                            <a href="~/School/Edit/@item.Id">
                            @item.Name
                               </a>
                        </td>                      
                        <td>
                            <a href="~/School/SchoolResult/@item.Id" class="btn btn-sm btn-info"><i class="glyphicon glyphicon-file"></i> Result</a>
                            <a href="~/School/AddItems/@item.Id" class="btn btn-sm btn-success"><i class="glyphicon glyphicon-plus"></i> Items</a>
                            <a href="~/School/DeleteSchool/@item.Id" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
